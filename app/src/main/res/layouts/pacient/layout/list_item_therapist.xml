<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="2dp"
    app:cardBackgroundColor="@color/secundaryColor"
    app:cardCornerRadius="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewNamePTherapist"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="294dp"
            android:layout_height="22dp"
            android:layout_marginStart="2dp"
            android:lines="1"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonCallTherapist"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tvwContact_initials"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.344"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/tvwNumberPhoneTherapist"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="295dp"
            android:layout_height="21dp"
            android:lines="1"
            android:text="@string/hint_email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonCallTherapist"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewNamePTherapist"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.711"
            tools:text="999 999 999" />

        <TextView
            android:id="@+id/tvwContact_initials"
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/oval"
            android:backgroundTint="@color/primaryColor"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/whiteColor"
            android:textSize="21sp"
            android:tint="#FFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintEnd_toStartOf="@+id/textViewNamePTherapist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:maxLines="1"
            tools:text="AS" />

        <Button
            android:id="@+id/buttonCallTherapist"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_phone_black_24dp"
            android:backgroundTint="@color/primaryColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.575" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>